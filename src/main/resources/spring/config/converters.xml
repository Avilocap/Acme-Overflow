		<bean class="converters.UserAccountToStringConverter"/>
		<bean class="converters.StringToUserAccountConverter"/>
		<!-- Teacher -->
		<bean class="converters.TeacherToStringConverter"/>
		<bean class="converters.StringToTeacherConverter"/>
		<!-- Webinar -->
		<bean class="converters.WebinarToStringConverter"/>
		<bean class="converters.StringToWebinarConverter"/>

	</util:list>
	
</beans>